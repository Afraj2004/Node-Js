const mongoose = require('mongoose');

const roomSchema = new mongoose.Schema({
  hotel: {
    type: mongoose.Schema.Types.ObjectId,
    ref: 'Hotel',
    required: true
  },
  roomNumber: Number,
  type: {
    type: String,
    enum: ['Single', 'Double', 'Deluxe', 'Suite'],
    required: true
  },
  pricePerNight: Number,
  isAvailable: {
    type: Boolean,
    default: true
  }
});

module.exports = mongoose.model('Room', roomSchema);
